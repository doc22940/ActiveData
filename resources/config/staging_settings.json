{
	"use": "elasticsearch",
	"constants": {
		"pyLibrary.env.http.default_headers": {
			"Referer": "https://wiki.mozilla.org/Auto-tools/Projects/ActiveData"
		},
		"pyLibrary.env.big_data.MAX_STRING_SIZE": 100000000,
		"jx_elasticsearch.meta.ENABLE_META_SCAN": false,
		"jx_elasticsearch.meta.DEBUG": true,
		"jx_elasticsearch.es52.setop.DEBUG": true,
		"jx_elasticsearch.es52.aggs.DEBUG": true
	},
//	"request_logs": {
//		"host": "http://localhost",
//		"port": 9200,
//		"index": "activedata_requests",
//		"type": "request_log",
//		"typed": false,
//		"schema": {
//			"$ref": "//../schema/request_log.schema.json"
//		}
//	},
	"saved_queries":{
		"host": "http://localhost",
		"port": 9200,
		"index": "saved_queries",
		"type": "query",
		"debug": false
	},
	"elasticsearch": {
		"host": "http://localhost",
		"port": 9200,
		"index": "testdata",
		"type": "test_result",
		"debug": true
	},
	"debug": {
		"trace": true,
		"cprofile": {
			"enabled": false,
			"filename": "./results/profile.tab"
		},
		"log": [
			{
				"log_type": "console"
			},
			{
				"log_type": "ses",
				"from_address": "klahnakoski@mozilla.com",
				"to_address": "klahnakoski@mozilla.com",
				"subject": "[ALERT][STAGING] Problem in ActiveData Frontend6",
				"$ref": "file://~/private.json#aws_credentials"
			},
			{
				"log_type": "elasticsearch",
				"host": "http://localhost",
				"port": 9200,
				"index": "debug-activedata",
				"type": "activedata",
				"timeout": 600,
				"schema": {
					"settings": {
						"index.number_of_replicas": 1,
						"index.number_of_shards": 3
					}
				},
				"rollover": {
					"interval": "3month",
					"max":"year"
				}
			},
			{
				"class": "logging.handlers.RotatingFileHandler",
				"filename": "/data1/logs/activedata.log",
				"maxBytes": 10000000,
				"backupCount": 10,
				"encoding": "utf8"
			}
		]
	}

}
